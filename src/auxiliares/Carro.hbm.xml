<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="auxiliares">
	<class name="auxiliares.Carro" table="carros">
		<id name="id" type="long" column="id" >
            <generator class="identity" />
		</id>

		<property name="modelo">
			<column name="modelo" />
		</property>
		<property name="marca">
			<column name="marca" />
		</property>
		<property name="ano">
			<column name="ano" />
		</property>
		<property name="cor">
			<column name="cor" />
		</property>
	</class>
</hibernate-mapping>